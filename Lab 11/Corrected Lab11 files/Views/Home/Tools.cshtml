@using Microsoft.AspNetCore.Http; @*this line is needed for your session state values to display, 
                                    this was the reason for the errors on lines 13, 14 and 15*@

@model FutureValueModel
@{
    ViewData["Title"] = "Tools";
}
<div class="text-center">
<h1 class="display-4">Tools</h1>
</div>

@*you can uncomment these lines*@
<div>@Context.Session.GetString("Course")</div>
<div>@Context.Session.GetString("StudentID")</div>
<div>@Context.Session.GetInt32("CurrentDate")</div> 

<p>Session state values are:</p>

<form asp-action="Tools" method="post">
    @*<div asp-validation-summary="All"></div>*@

    <div class="container">

        <div class="row form-group">
            <label asp-for="SaleAmount" class="col-sm-3"></label>
            <div class="col-sm'3">
                <input asp-for="SaleAmount" class="form-control" />
            </div>
            <span asp-validation-for="SaleAmount" class="col text-danger"></span>
        </div>
        <div class="row form-group">
            <label asp-for="TaxPercent" class="col-sm-3"></label>
            <div class="col-sm'3">
                <input asp-for="TaxPercent" class="form-control" />
            </div>
            <span asp-validation-for="TaxPercent" class="col text-danger"></span>
        </div>

        <div class="row form-group">
            <label class="col-sm-3">Tax Amount:</label>
            <div class="col-sm'3">
                <input value=@ViewBag.FV.ToString("c2") readonly class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3">Total Sale Price:</label>
            <div class="col-sm'3">
                <input value=@ViewBag.Total.ToString("c2") readonly class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-offset-sm-3">
                <button type="submit" class="btn-primary p-2 mr-5">Calculate</button>
                <a asp-action="Tools" class="btn btn-outline-secondary p-2">Clear</a>
            </div>
        </div>
    </div>
</form>